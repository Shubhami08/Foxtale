    letter-spacing: 0.6px;
    padding: 0 4rem 3rem 4rem;
  }
  .four-yearend {
    padding: 2rem 2rem 5rem 2rem;
    flex-wrap: wrap;
    flex-direction: column-reverse;
    justify-content: center;
    align-items: center;
  }
  .four-yearend h4 {
    font-size: 21px;
    text-align: center;
    padding-left: 0;
  }
  .four-yearend h6 {
    font-size: 14px;
    text-align: center;
    margin: 0 auto 20px auto;
    padding-left: 0;
  }
  .four-yearend a.button {
    margin-left: 0;
    margin-bottom: 20px;
  }
}
</style>
 
<div class="head-yearend">  
  <h3>{{ section.settings.heading }}</h3>
  {% if section.settings.blwmn != blank %}
    <img src="{{ section.settings.blwmn | img_url: 'master' }}">
  {% endif %}
</div>
<div class="second-yearend">
  <h4>{{ section.settings.skndtcxtbld }}</h4>
  <h6>{{ section.settings.skndtxtsml }}</h6>
</div>
<div class="main-yearend">
  {% for block in section.blocks %}
      <div class="inner-yearend blk-{{ forloop.index }}">
        <div class="yearend-image">
          <img src="{{ block.settings.mnimg | img_url: 'master' }}">
        </div>
        <div class="yearend-text">            
              <h4>{{ block.settings.mntxt }}</h4>
              <h6>{{ block.settings.mnprgrph }}</h6>           
        </div>
      </div>
  {% endfor %}
</div>
<div class="four-yearend">
  <div><img src="{{ section.settings.lstimg | img_url: 'master' }}"></div>
  <div>
    <h4>{{ section.settings.lsthd }}</h4>
    <h6>{{ section.settings.lsttxt }}</h6>
    <a class="button">{{ section.settings.btntxt }}</a>
  </div>
</div>
<div class="lstyrbtn" style="background-color: #f7f7f7;">
  <a class="button">{{ section.settings.rllastbtn }}</a>
  <p style="text-align: center; margin-bottom: 0px; margin-top: 15px; color: #2c2c2c;">Apply code at checkout. Cannot be combined with other coupons.</p>
</div>

<!-- Growlytics -->
<script>
  $(document).ready(function () {
    $( '.shop-all-qty-cart-btn').on("click", function(){
    var prodName = $(this).data("data-handle");
    Growlytics.events.track("Befor After ATC N",{
        'clicks': "Clicks",                    
    'Product Name': prodName
    });
    });
  });
</script>

<script>
  $(document).ready(function () {
    $( '.round-productimg').on("click", function(){
    var prodName = $(this).data("title");
    Growlytics.events.track("Befor After Image Clicks N",{
      'clicks': "Clicks",
    'Product Name': prodName
    });
    });
  });
</script>
<!-- end -->

