  .head-yearend h3 {
    font-size: 18px;
  }
  .head-yearend img {
    width: 88%;
    height: 50%;
  }
  .second-yearend {
    background-color: #f7f7f7;
    padding: 3rem 2rem 5rem 2rem;
  }
