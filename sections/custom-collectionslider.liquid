  //     $(this).parent('.cus-btnlr').siblings('.cus-colselect').children('.slick-prev').click()
  // });
  // });
</script>

{% schema %}
{
  "name": "Collections Slider Custom",
  "settings": [
    {
      "id": "heading",
      "type": "text",
      "label": "Section Heading"
    }
  ],
  "blocks": [
    {
      "name": "Collection",
      "type": "text",
      "settings": [
        {
          "id": "collectionmain",
          "type": "collection",
          "label": "Select Collection"
        }, {
          "id": "collectionimg",
          "type": "image_picker",
          "label": "Collection Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collections Slider Custom",
      "category": "Any"
    }
  ]
}
{% endschema %}
