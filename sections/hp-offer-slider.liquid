    text-transform: uppercase;
  }
  .offerwrap-img a img {
    width: 624px;
    height: 479px;
    object-fit:cover;
  }
  .custom-offerwrap .slick-dots button {
    width: 10px;
    height: 10px;
    border-radius: 6px;
    background: #9E77ED;
    font-size: 0;
    padding: 0;
    margin: 0 16px 0 0px;
    line-height: 0;
