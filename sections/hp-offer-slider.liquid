<style>

  .custom-offerwrap .slick-dots{
    display :none !important;
  }
  
  .custom-offerwrap .slick-slide{
    margin : 0px !important;
  }
  .custom-offerwrap {
    border-radius: 0px;
    background: #364AA3;
    box-shadow: 0px 20px 24px -4px rgba(16, 24, 40, 0.08), 0px 8px 8px -4px rgba(16, 24, 40, 0.03);
  }
  .custom-inwrap {
    display: grid;
    grid-template-columns: 1fr 1.05fr;
    padding: 83px 26px 77px 26px;
  }
  .off-wrap h3 {
