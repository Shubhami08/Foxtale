    line-height: normal !important;

    border-radius: 0px !important;
    border: 0px !important;
    box-shadow: none !important;
      text-transform : capitalize !important;
  }
}

      .button-1{
    display: block;
    width: 150px;
    height: 60px;
    margin-top: 55px;
    text-align: center;
    padding: 15px 0px;
    color: #344054;
    font-family: Montserrat;
    font-size: 18px;
    font-style: normal;
    font-weight: 600;
    line-height: 28px;
    margin-left : 64px;
    border-radius: 8px;
    border: 1px solid var(--Gray-300, #D0D5DD);
    background: var(--Base-White, #FFF);
    box-shadow: 0px 1px 2px 0px rgba(16, 24, 40, 0.05);
    cursor:pointer;
    text-transform : uppercase;
  }


</style>

<div class="custom-offerwrap">
  <div class="offering">
  {% for block in section.blocks %}
   <div class="offring-innerwrapper">
    <div class="custom-inwrap">
        <div class="off-wrap">
          <h3>{{ block.settings.topoffertxt }}</h3>
          <h6>{{ block.settings.offrdes }}</h6>
          <a href="{{ block.settings.btnlink }}" class="button-1">{{ block.settings.btntxt }}</a>
        </div>
        <div class="offerwrap-img">
          {% if block.settings.offeringimg != blank %}
            <a class="" href="{{ block.settings.imglink }}" data-foxtale-event="the-fox-tales-section-click-event" foxtale-event-attr-page-link="{{ block.settings.imglink }}" foxtale-event-attr-tab-name="{{ section.settings.heading }}">
              <img  class="lazyload"   loading="lazy" alt="img"
              src="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100' fill='darkgray'><rect width='100' height='100'/></svg>"
               data-src="{{ block.settings.offeringimg | img_url: 'master' }}"></a>
          {% endif %}
        </div>
     </div>
    </div>
  {% endfor %}
  </div>
</div>

<script>
  $('.offering').slick({
    dots: true,
    infinite: false,
    speed: 300,
    slidesToShow: 1,
    slidesToScroll: 1,
    arrows: false,
    responsive: [
      {
        breakpoint: 1200,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1,
          infinite: true
        }
      },
      {
        breakpoint: 600,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1
        }
      }
    ]
  });

</script>

{% schema %}
  {
    "name": "Offer Book",
    "settings": [
      {
        "id": "heading",
        "type": "text",
        "label": "Section Heading"
      }
    ],
    "blocks": [
      {
        "name": "Image",
        "type": "text",
        "settings": [
          {
            "id": "topoffertxt",
            "type": "text",
            "label": "Offer Heading"
          },
          {
            "id": "offrdes",
            "type": "text",
            "label": "Add Description"
          },
          {
            "id": "imglink",
            "type": "url",
            "label": "Add Image Link"
          },
          {
            "id": "offeringimg",
            "type": "image_picker",
            "label": "Add Image"
          },
          {
            "id": "btnlink",
            "type": "url",
            "label": "Add Button Link"
          },
          {
            "id": "btntxt",
            "type": "text",
            "label": "Add Button Text",
            "default":"Shop Now"
          },
        ]
      }
    ],
    "presets": [
      {
        "name": "Offer Book",
        "category": "Any"
      }
    ]
  }
{% endschema %}