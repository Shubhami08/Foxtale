  }
  .off-wrap h6 {
    color: #E9D7FE;
    font-family: Inter;
    font-size: 26.383px;
    font-weight: 400;
    line-height: 39.574px;
    margin-top: 26.38px;
    /* margin-left: 17px */
    margin-left:64px;
  }
  .off-wrap .button {
    width: 90px;
    height: 32px;
    margin-left:17px;
    margin-top: 46.62px;
    font-family: Inter;
    font-size: 18px;
    font-style: normal;
    font-weight: 600;
    line-height: 28px;
    padding: 16px 22px;
    border-radius: 8px;
    border: 1px solid var(--Gray-300, #D0D5DD);
    background: var(--Base-White, #FFF);
