.stat-wrapper {
  background-color: #FFF9F2;
  margin: 25px 15px 5px 15px;
  border-top-left-radius: 18px;
  border-top-right-radius: 18px;
  padding-left: 15px;
  padding-right: 15px;
  display: none;
}
.stat-pik {
  display: grid;
  grid-template-columns: 1fr 1fr;
}
.stat-textp {
  padding-left: 12px;
  padding-right: 12px;
}
.stat-innerwrapper h3 {
  text-align: center;
  font-size: 14px;
  font-weight: 400;
  color: #4b4b4b;
  padding-top: 15px;
}
.stat-textp p {
  text-align: center;
  font-size: 12px;
  font-weight: 400;
  color: #333333;
  line-height: 20px;
}
.stat-innerwrapper h3 span{
  font-weight: 600;
}
</style>


<div class="stat-wrapper">
  <div class="stat-innerwrapper">
    {% if product.metafields.custom.stat_heading != blank %}
     {{ product.metafields.custom.stat_heading }}
    {% endif %}
    <div class="stat-pik">
      <div class="stat-textp">
        {% if product.metafields.custom.statleftphoto != blank %}
        <img src="{{ product.metafields.custom.statleftphoto | image_url }}">
        {% endif %}
        {% if product.metafields.custom.statlefttext != blank %}
        {{ product.metafields.custom.statlefttext }}
        {% endif %}
      </div>
      <div class="stat-textp">
        {% if product.metafields.custom.statrightphoto != blank %}
        <img src="{{ product.metafields.custom.statrightphoto | image_url }}">
        {% endif %}
        {% if product.metafields.custom.statrighttext != blank %}
        {{ product.metafields.custom.statrighttext }}
        {% endif %}
      </div>
    </div>
  </div>
</div>

<div class="benefits-slider t4s-code__html container {{ product.handle }}">
  <div class="benefit-left">
    {% if product.metafields.custom.enhance_benefits_content_1 != blank %}
    {{ product.metafields.custom.enhance_benefits_content_1 }}
    {% endif %}
    {% if product.metafields.custom.enhance_benefits_content_2 != blank %}
    <div class="dot-tex">
      {{ product.metafields.custom.enhance_benefits_content_2 }}
    </div>
    {% endif %}
  </div>

  {% assign collection = collections[product.metafields.custom.enhance_benefits_collection] %}
  {% if collection != blank %}
  <div class="benefit-right">
    <h3>Enhance Benefits<span>Recommended</span></h3>
    <h4>Maximise the Impact of <span>{{ product.title }}</span></h4>
    <div class="direct-mainwrap">
      <div class="newroute products-grid-item-main" >
        {%- for product in collection.products limit:5 -%}
          <div class="products-grid-item">
            <div class="product-innr">
              {% if product.metafields.custom.pr_excerpt != blank %}
                <h6 class="pr-{{ product.metafields.custom.pr_excerpt }} stepz">
                  <span>Step {{ forloop.index }}.</span> {{ product.metafields.custom.pr_excerpt }}
                </h6>
              {% endif %}
              <div class="product-image pr oh lazyloadt4sed product-innr-top">
                <a rel="dofollow" href="{{product.url}}">
                  {%- render 'product_labels', on: 'singe', product: product -%}
                  <img class="pr-img-first lazyload" loading="lazy" alt="Product--Image" src="{{ product.metafields.custom.benefit_image | image_url }}"/>
                </a>
              </div>
              <div class="prod-deetz">
                <h2>
                  <a rel="dofollow" href="{{product.url}}">{{ product.title | truncate: 25 }}</a>
                </h2>
                <h5>
                  {{ product.price | money }} |
                  <span>
                    {%- if product.variants.first.weight != 0 %}{{ product.variants.first.weight }} ml {% endif -%}
                  </span>
                </h5>
              </div>
            </div>
            <div class="shop-all-qty-cart-btn">
              <a
                href="{{ product.url }}"
                id="addtocart_r"
                class="fx-custom-btn-dark t4s-pr-item-btn t4s-pr-addtocart s-atc"
                data-variant-id="{{product.first_available_variant.id}}"
                data-action-atc
                rel="dofollow"
                ><span class="t4s-svg-pr-icon"></span
                ><span class="t4s-text-pr">{{ 'products.product.add_to_cart' | t }}</span></a
              >
            </div>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
  {% endif %}
  {% if product.metafields.custom.enhance_benefits_content_2 != blank %}
  <div class="dot-tex1 benefit-left">
      {{ product.metafields.custom.enhance_benefits_content_2 }}
  </div>
  {% endif %}
</div>

<script>
  $('.newroute').slick({
    dots: false,
    infinite: false,
    speed: 300,
    slidesToShow: 2,
    slidesToScroll: 1,
    arrows: false,
    responsive: [
      {
        breakpoint: 1200,
        settings: {
          slidesToShow: 2,
          slidesToScroll: 1,
          infinite: true
        }
      }, 
      {
        breakpoint: 1024,
        settings: {
          slidesToShow: 2,
          slidesToScroll: 1,
          infinite: true
        }
      },
      {
        breakpoint: 600,
        settings: {
          slidesToShow: 2,
          slidesToScroll: 1
        }
      },
      {
        breakpoint: 480,
        settings: {
          slidesToShow: 1.5,
          slidesToScroll: 1,
          centerMode: true
        }
      }
    ]
  });
</script>

