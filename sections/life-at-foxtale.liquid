{% schema %}
{
  "name": "Life At Foxtale",
  "settings": [
      {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Default Heading"
    },

    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Upload Image 2"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Upload Image 3"
    }
  ],
  "blocks": [
      {
        "type": "SingleImage",
        "name": "Single Images",
        "settings": [
              {
                "type": "image_picker",
                "id": "image_1",
                "label": "Upload Image 1"
              }
                    ]
      },
      {
        "type": "DoubleImage",
        "name": "Double Images",
        "settings": [
              {
                "type": "image_picker",
                "id": "image_2",
                "label": "Upload Image 1"
              },
              {
                "type": "image_picker",
                "id": "image_3",
                "label": "Upload Image 2"
              }
                    ]
      }
  ]
}
{% endschema %}

<style>
.image-section-laf {
  margin-bottom: 38px;
}
.image-section-laf .main-heading-laf{
  color: #000;
  font-family: Poppins;
  font-size: 20px;
  font-style: normal;
  font-weight: 500;
  line-height: normal;
  margin-bottom: 20px;
}
.image-row-laf {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
  grid-column-gap: 7px;
  align-items: center;
}
.image-block-laf {
  width: 100%;
}
.image-block-double {
  display: flex;
  flex-direction: column;
}
.image-block-double img, .image-block-laf img {
  width: 100%;
  line-height: 0;
}
.image-row-laf .image-block-double:first-child img {
  border-top-left-radius: 8px;
  border-bottom-left-radius: 8px;
}
.image-row-laf .image-block-laf:last-child img {
  border-top-right-radius: 8px;
  border-bottom-right-radius: 8px;
}
.desk-show {
  display: block !important;
}
.slidez {
  display: none !important;
}

@media screen and (max-width:768px){
  .image-section-laf .main-heading-laf{
      font-size: 18px;
  }
  .image-row-laf {
    display: none;
    grid-column-gap: 5px;
    grid-row-gap: 4px;
    align-items: center;
  }
  .image-row-laf .image-block-double:first-child img {
    border-top-left-radius: 4px;
    border-bottom-left-radius: 4px;
  }
  .image-row-laf .image-block-laf:last-child img {
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
  }
  .image-section-laf .slick-slide {
    margin: 0 5px;
  }
  .image-section-laf {
    margin-bottom: 12px;
  }
  .desk-show {
    display: none !important;
  }
  .slidez {
    display: block !important;
  }
}
</style>

<section class="image-section-laf">
    <h1 class="main-heading-laf">{{ section.settings.heading }}</h1>
     <div class="image-row-laf slidez">
       {% for block in section.blocks %}
          {%- case block.type -%}
           {%- when 'SingleImage' -%}
            <div class="image-block-laf">
              {% if block.settings.image_1 != blank %}
                <img src="{{ block.settings.image_1 | img_url: 'master' }}" alt="{{ block.settings.image_1 }}" />
              {% endif %}
            </div>
           {%- when 'DoubleImage' -%}
            <div class="image-block-double">
              {% if block.settings.image_2 != blank %}
                  <img src="{{ block.settings.image_2 | img_url: 'master' }}" alt="{{ block.settings.image_2 }}" />
              {% endif %}  
              {% if block.settings.image_3 != blank %}
                  <img src="{{ block.settings.image_3 | img_url: 'master' }}" alt="{{ block.settings.image_3 }}" />
              {% endif %}
            </div>
            {% endcase %}
         {% endfor %}
      </div>
      <div class="image-row-laf Desk-show">
       {% for block in section.blocks %}
          {%- case block.type -%}
           {%- when 'SingleImage' -%}
            <div class="image-block-laf">
              {% if block.settings.image_1 != blank %}
                <img src="{{ block.settings.image_1 | img_url: 'master' }}" alt="{{ block.settings.image_1 }}" />
              {% endif %}
            </div>
           {%- when 'DoubleImage' -%}
            <div class="image-block-double">
              {% if block.settings.image_2 != blank %}
                  <img src="{{ block.settings.image_2 | img_url: 'master' }}" alt="{{ block.settings.image_2 }}" />
              {% endif %}  
              {% if block.settings.image_3 != blank %}
                  <img src="{{ block.settings.image_3 | img_url: 'master' }}" alt="{{ block.settings.image_3 }}" />
              {% endif %}
            </div>
            {% endcase %}
         {% endfor %}
      </div>     
</section>

<script>
$('.slidez').slick({
  dots: false,
  infinite: false,
  arrows: false,
  speed: 300,
  slidesToShow: 4,
  slidesToScroll: 4,
  responsive: [
    {
      breakpoint: 1024,
      settings: {
        slidesToShow: 3,
        slidesToScroll: 3
      }
    },
    {
      breakpoint: 600,
      settings: {
        slidesToShow: 3,
        slidesToScroll: 2
      }
    },
    {
      breakpoint: 480,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 1
      }
    }
    // You can unslick at a given breakpoint now by adding:
    // settings: "unslick"
    // instead of a settings object
  ]
});
</script>