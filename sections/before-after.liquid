{% schema %}
{
  "name": "App Before After",
  "tag": "section",
  "class": "section-compare spaced-section",
  "enabled_on": {
    "templates": ["*"]
  },
  "settings": [
    {
      "type": "text",
      "id": "app_before_after_heading",
      "label": "Before After Heading"
    },
    {
      "type": "richtext",
      "id": "app_before_after_heading_mobile",
      "label": "Before After Heading Mobile"
    },
    {
      "type": "checkbox",
      "id": "border_top",
      "default": false,
      "label": "t:sections.compare-block.settings.border_top.label"
    },
    {
      "type": "checkbox",
      "id": "border_bottom",
      "default": false,
      "label": "t:sections.compare-block.settings.border_bottom.label"
    },
    {
      "type": "text",
      "id": "policy_text",
      "label": "Before After Policy Text"
    }
  ],
  "presets": [
    {
      "name": "App Before After"
    }
  ],
  "blocks": [
    {
      "type": "before-after",
      "name": "Before After",
      "settings": [
        {
          "id": "before_after_details_heading",
          "type": "text",
          "label": "Before After Details Heading"
        },
        {
          "id": "before_after_details_content",
          "type": "richtext",
          "label": "Before After Details Content"
        }
      ]
    }
  ]
}
{% endschema %}