<style>
  .custom-slimbwrapp {
    padding: 0 28px;
    margin: 38px 0 32px 0;
  }
  .custom-slimb {
    display: block;
  }
  .custom-slimbinner {
    background-color: #D9D9D9;
    padding: 28px;
    border-radius: 4px;
  }
  .custom-slimb a img {
    border-radius: 8px;
    width: 100%;
  }
  .custom-slimbinner a h4 {
    font-weight: 500;
    color: #000000;
  }
  .custom-smallslimb {
    display: none;
  }

  @media(max-width: 768px) {
    .custom-slimbwrapp {
      padding: 1px 6px;
      margin: 0px 0 18px 0;
    }
    .custom-slimb {
      display: none;
    }
    .custom-smallslimb {
      display: block;
    }
    .custom-smallslimb a img {
      border: none;
      border-radius: 4px;
    }
    .custom-smallslimbinner {
      background-color: #D9D9D9;
      padding: 22px 7px;
      border-radius: 4px;
    }
    .custom-smallslimbinner a h4 {
      font-weight: 500;
      color: #000000;
    }
  }

  @media(max-width: 380px) {
    .custom-smallslimbinner a h4 {
      font-size: 16px;
    }
  }
</style>

<div class="custom-slimbwrapp" style='z-index: 1000;position: relative;'>
  <div class="custom-slimb">
    {% if section.settings.txter != blank %}
      <div class="custom-slimbinner">
        <a href="{{ section.settings.linkz }}">
          <h4>{{ section.settings.txter }}</h4>
        </a>
      </div>
    {% else %}
      <a href="{{ section.settings.linkz }}"
        ><img
          data-src="{{ section.settings.imageselect | img_url: '1400x1400' }}"
          class="lazyload"
          loading="lazy"
          alt="product-img"
          height="100%"
          width="100%"
          src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100' fill='%23282828'%3E%3Crect width='100' height='100'/%3E%3C/svg%3E"
      ></a>
    {% endif %}
  </div>
  <div class="custom-smallslimb">
    {% if section.settings.txtersml != blank %}
      <div class="custom-smallslimbinner">
        <a href="{{ section.settings.linkz }}">
          <h4>{{ section.settings.txtersml }}</h4>
        </a>
      </div>
    {% else %}
      <a href="{{ section.settings.linkz }}"
        ><img
          class="lazyload"
          loading="lazy"
        src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 50 50' width='50' height='50' fill='%23282828'%3E%3Crect x='-50' y='20' width='50' height='10' fill='%23ccc'%3E%3Canimate attributeName='x' attributeType='XML' values='-50;100;' dur='1.5s' repeatCount='indefinite'/%3E%3C/rect%3E%3Crect x='-50' y='35' width='50' height='10' fill='%23ccc'%3E%3Canimate attributeName='x' attributeType='XML' values='-50;100;' dur='1.5s' repeatCount='indefinite'/%3E%3C/rect%3E%3C/svg%3E"
          data-src="{{ section.settings.imageselectsml | img_url: '1400x1400' }}"
          height="100%"
          width="100%"
          alt="product-img"
      ></a>
    {% endif %}
  </div>
  <!-- <a href="{{ section.settings.ulr }}">{{ section.settings.btntxt }}</a> -->
</div>

<!-- Growlytics -->
<script>
     $(document).ready(function () {
    $('.custom-smallslimb').on("click", function(){
     Growlytics.events.track("JW Slim banner",{
       'clicks': "Clicks",
     });
    });
  });
</script>
<!-- End -->

{% schema %}
{
  "name": "Custom Slim-Mini Banner",
  "settings": [
    {
      "id": "txter",
      "type": "text",
      "label": "Banner Text"
    },
    {
      "id": "linkz",
      "type": "url",
      "label": "Add Banner Link"
    },
    {
      "id": "imageselect",
      "type": "image_picker",
      "label": "Add Banner Image"
    },
    {
      "id": "txtersml",
      "type": "text",
      "label": "Banner Text Mobile"
    }, {
      "id": "imageselectsml",
      "type": "image_picker",
      "label": "Add Banner Image Mobile"
    }
  ],
  "presets": [
    {
      "name": "Custom Slim-Mini Banner",
      "category": "Any"
    }
  ]
}
{% endschema %}
