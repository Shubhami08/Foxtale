        <span>{% render 'copy-svg' %}</span>
      </div>
      <div class="copiedcode_text" style="display:none;">Code Copied</div>
    </div> -->
  </div>
</div>

<script>
  $(document).ready(function() {
    $(document).on('click', '.offerbox-mainwrap .offer-copy', function(){
        setTimeout(function() {
           $('.copiedcode_text').hide();
          $(".offer-copy").show();
        }, 1000);
        var text = $(this).find('h4').text();
        copyToClipboard(text);
        $(this).parents(".offerbox-list").find('.copiedcode_text').show();
        $(this).parents(".offerbox-list").find(".offer-copy").hide();
        
    });
  });
  
  function copyToClipboard(text) {
    var tempInput = $('<input>');
    $('body').append(tempInput);
    tempInput.val(text).select();
    document.execCommand('copy');
    tempInput.remove();
  }
</script>